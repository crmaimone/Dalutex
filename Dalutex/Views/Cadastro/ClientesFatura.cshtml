@using Dalutex.Models;

@model Dalutex.Models.PesquisaClientesFaturaViewModel

@{
    ViewBag.Title = "CLIENTE DA FATURA";
}

<div class="header-title"><h3>@ViewBag.Title</h3></div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <section id="PesquisaClientesFatura">
                @using (Html.BeginForm("ClientesFatura", "Cadastro", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group pull-left">
                        @Html.LabelFor(m => m.Filtro, new { @class = "col-md-2 control-label" })
                        <div style="display:inline-flex">
                            @Html.TextBoxFor(m => m.Filtro, new { @class = "form-control", style = "height:37px;" })
                            @Html.ValidationMessageFor(m => m.Filtro, "", new { @class = "text-danger" })
                            <button type="submit" class="btn btn-default" style="margin-left:5px; margin-bottom:3px"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;PESQUISAR</button>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <section id="ResultadoClientes">
                <div class="list-group" id="lstClientes">

                    @if (Model.IDTipoPedido != (int)Enums.TiposPedido.RESERVA)
                    { 
                        <a href="#" class="list-group-item active">CLIENTE FATURA</a>
                        if (@Model != null && @Model.ClientesFatura != null)
                        {
                            foreach (Dalutex.Models.DataModels.VW_CLIENTE_TRANSP item in Model.ClientesFatura)
                            {
                                <a href="@Url.Action("ProximoPasso", "Cadastro", new { IDClienteFatura = item.ID_CLIENTE })" class="list-group-item"><strong> @item.CNPJ.Trim()</strong> | @item.NOME.Trim() | @item.ENDERECO</a>
                            }
                        }
                        else
                        {
                            <p class="list-group-item"><em>UTILIZE O FILTRO PARA BUSCAR O CLIENTE DA FATURA</em></p>
                        }
                    }
                    else
                    {
                        <a href="#" class="list-group-item active">CLIENTE</a>
                        if (@Model != null && @Model.ClientesFatura != null)
                        {
                            foreach (Dalutex.Models.DataModels.VW_CLIENTE_TRANSP item in Model.ClientesFatura)
                            {
                                <a href="@Url.Action("ProximoPasso", "Cadastro", new { IDClienteFatura = item.ID_CLIENTE })" class="list-group-item"><strong> @item.CNPJ.Trim()</strong> | @item.NOME.Trim() | @item.ENDERECO</a>
                            }
                        }
                        else
                        {
                            <p class="list-group-item"><em>UTILIZE O FILTRO PARA BUSCAR O CLIENTE</em></p>
                        }
                    }
                    
                </div>
            </section>
        </div>
    </div>
</div>

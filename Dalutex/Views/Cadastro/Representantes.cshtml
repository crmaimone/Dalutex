@using Dalutex.Models.DataModels

@model Dalutex.Models.PesquisaRepresentantesViewModel

@{
    ViewBag.Title = "REPRESENTANTE";
}

<div class="header-title"><h3>@ViewBag.Title</h3></div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <section id="PesquisaRepresentantes">
                @using (Html.BeginForm("Representantes", "Cadastro", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group pull-left">
                        @Html.LabelFor(m => m.Filtro, new { @class = "col-md-2 control-label" })
                        <div style="display:inline-flex">
                            @Html.TextBoxFor(m => m.Filtro, new { @class = "form-control", style = "height:37px;" })
                            @Html.ValidationMessageFor(m => m.Filtro, "", new { @class = "text-danger" })
                            <button type="submit" class="btn btn-default" style="margin-left:5px; margin-bottom:3px"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;PESQUISAR</button>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <section id="ResultadoRepresentantes">
                <div class="list-group" id="lstRepresentantes">
                    <a href="#" class="list-group-item active">REPRESENTANTES</a>
                    @if (@Model != null && @Model.Representantes != null)
                    {
                        foreach (REPRESENTANTES item in Model.Representantes)
                        {
                            <a href="@Url.Action("ProximoPasso", "Cadastro", new { IDRepresentante = item.IDREPRESENTANTE })" class="list-group-item"><strong>@item.IDREPRESENTANTE</strong> | @item.NOME</a>
                        }
                    }
                    else
                    {
                        <p class="list-group-item"><em>UTILIZE O FILTRO PARA BUSCAR O REPRENSENTANTE</em></p>
                    }
                </div>
            </section>
        </div>
    </div>
</div>

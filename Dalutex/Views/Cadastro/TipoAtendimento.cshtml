@using Dalutex.Models.DataModels

@model Dalutex.Models.PesquisaTipoAtendimentoViewModel

@{
    ViewBag.Title = "TIPO DE ATENDIMENTO";
}

<div class="header-title"><h3>@ViewBag.Title</h3></div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <section id="Resultado">
                <div class="list-group" id="lstItens">
                    <a href="#" class="list-group-item active">TIPOS</a>
                    @if (@Model != null && @Model.TiposAtendimento != null)
                    {
                        foreach (var item in Model.TiposAtendimento)
                        {
                            if (@item.COD_ATEND.ToString() == @Model.TipoSelecionado)
                            {
                                <a href="@Url.Action("ProximoPasso", "Cadastro", new { IDTipo = item.COD_ATEND })" class="list-group-item"><i class="glyphicon glyphicon-ok"></i>&nbsp;@item.DESCRI_ATEND</a>
                            }
                            else
                            {
                                <a href="@Url.Action("ProximoPasso", "Cadastro", new { IDTipo = item.COD_ATEND })" class="list-group-item">@item.DESCRI_ATEND</a>
                            }

                        }
                    }
                    else
                    {
                        <p class="list-group-item"><em>LISTA DE QUALIDADES NÃO CARREGADA</em></p>
                    }
                </div>
            </section>
        </div>
    </div>
</div>

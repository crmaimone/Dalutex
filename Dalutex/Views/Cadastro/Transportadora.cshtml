@using Dalutex.Models.DataModels

@model Dalutex.Models.PesquisaTransportadoraViewModel

@{
    ViewBag.Title = "Transportadora";
}

<h1 class="viewTitle">@ViewBag.Title</h1>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <section id="PesquisaTransportadora">
                @using (Html.BeginForm("Transportadora", "Cadastro", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filtro, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Filtro, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Filtro, "", new { @class = "text-danger" })
                        </div>
                        <input type="submit" value="Pesquisar" class="btn btn-default" />
                    </div>
                }
            </section>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <section id="ResultadoTransportadoras">
                <div class="list-group" id="lstTransportadoras">
                    <a href="#" class="list-group-item active">TRANSPORTADORAS</a>
                    @if (@Model != null && @Model.Transportadoras != null)
                    {
                        foreach (TRANSPORTADORAS item in Model.Transportadoras)
                        {
                            <a href="@Url.Action("ConclusaoPedido", "Pedido", new { IDTransportadora = item.IDTRANSPORTADORA })" class="list-group-item"><strong>@item.IDTRANSPORTADORA</strong> @item.NOME</a>   
                        }
                    }
                    else
                    {
                        <p class="list-group-item"><em>Utilize o filtro para buscar transportadoras</em></p>
                    }
                </div>
            </section>
        </div>
    </div>
</div>

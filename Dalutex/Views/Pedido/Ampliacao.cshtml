@model Dalutex.Models.AmpliacaoViewModel

@using Dalutex.Models.DataModels;

@{
    ViewBag.Title = "Ampliação";
}
<h1 class="viewTitle">@ViewBag.Title</h1>
@if (Model.Desenho == null)
{
    <h3>Desenho não informado</h3>
}
else
{
    <h2>Desenho: @Model.Desenho Variante: @Model.Variante</h2>
    <img src="@Url.Content(Model.Imagem)" class="img-rounded" style="max-width:100%" />
}
<br />
<a class="btn btn-default right" href="@Url.Action("ArtigosDisponiveis", "Pedido", new { desenho = Model.Desenho, variante = Model.Variante })">Voltar</a>

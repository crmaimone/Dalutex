@model Dalutex.Models.DesenhosValidaReservaViewModel

@using Dalutex.Models;
@using Dalutex.Models.DataModels;

@{    
     ViewBag.Title = "Desenhos da validação de reserva";
}

<div class="panel panel-default"><h3>@ViewBag.Title</h3></div>

    <div class="row">
        @if (Model.Galeria != null)
        {
            foreach (VW_ITENS_VALIDAR_RESERVA item in Model.Galeria)
            {
                <div class="col-sm-4 col-md-2">

                    @Html.Partial(
                        "_Thumb",
                        new Dalutex.Models.ThumbViewModel()
                        {
                            Tipo = Enums.ItemType.ValidacaoReserva,
                            Desenho = item.DESENHO,
                            Variante = item.VARIANTE,
                            UrlImagens = Model.UrlImagens,
                            Reduzido = 0,
                            Cor = null,
                            RGB = null,
                            IDColecao = 23,//TODO
                            NMColecao = "Exclusivos",//TODO
                            Pagina = Model.Pagina,
                            CodStudio = Model.CodStudio,
                            CodDal = Model.CodDal,
                            IDStudio = 0,
                            IDItemStudio = 0,
                            PedidoReserva = item.PEDIDO_RESERVA,
                            ItemPedidoReserva = item.IT_PEDIDO_RES,
                            IDVariante = item.ID_VAR
                        })
                </div>
            }
        }
    </div>
    <div class="row">
        <nav>
            <ul class="pager">
                @if (Model.Galeria != null)
                {
                    if (Model.Pagina > 1)
                    {
                        <li class="previous"><a href="@Url.Action("DesenhosValidaReserva", "Pedido", 
                         new { pedidoreserva = Model.PedidoReserva,  pagina = Model.Pagina - 1 })"><span aria-hidden="true">&larr;</span>P&aacute;gina Anterior</a></li>
                    }
                    <li class="next"><a href="@Url.Action("DesenhosValidaReserva", "Pedido", 
                        new { pedidoreserva = Model.PedidoReserva, pagina = Model.Pagina + 1 })">Pr&oacute;xima P&aacute;gina <span aria-hidden="true">&rarr;</span></a></li>
                }
            </ul>
        </nav>
    </div>
    <hr>
    <a class="btn btn-default right" href="javascript:history.back()">VOLTAR</a>

@section Scripts {
    @Scripts.Render("~/bundles/equalheight")
    <script>
        $(document).ready(function () {
            //API
            scriptWrapper = (function () {

                //API Attributes

                //API Methods
                loadImages = function () {
                    $(".img-thumbnail").each(function () {
                        var $img = $(this);
                        var data = $img.data("assigned-id").split("_");
                        var desenho = data[0];
                        var variante = data[1];

                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("ObterDesenho", "Pedido")',
                            data: 'desenho=' + desenho + '&variante=' + variante,
                            async: false,
                            success: function (Image) {
                                if (Image != '') {
                                    $img.attr('src', 'data:image/jpg;base64,' + Image.Image);
                                }
                            },
                            error: function (xhr, ajaxOptions, thrownError) {
                                $img.attr('src', 'data:image/jpg;base64,');
                            }
                        })
                    });
                    $('.equal-height').equalHeight();
                }

                // public API
                return {
                    loadImages: loadImages
                };
            })();

            //Init
            (function Init() {
                $('.equal-height').equalHeight();
                //scriptWrapper.loadImages();
            })();
        });
    </script>
}

@model Dalutex.Models.InserirNoCarrinhoViewModel

@{
    ViewBag.Title = "Inserir no carrinho";
}

<div class="container">
    <div class="row"><h2>@ViewBag.Title</h2></div>
    <div class="row"><h5>Desenho:@Model.Desenho</h5></div>
    <div class="row">
        <div class="col-md-8">
            <section id="InserirCarrinhoForm">
                @using (Html.BeginForm("InserirNoCarrinho", "Pedido", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Dados da venda:</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(x => x.Pecas, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.Pecas, new { id = "txtPecas" })
                            @Html.ValidationMessageFor(m => m.Pecas, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Quantidade, new { @class = "col-md-2 control-label", id="lblQuantidade" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.Quantidade, new { id = "txtQuantidade", disabled = "disabled" })
                            @Html.ValidationMessageFor(m => m.Quantidade, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Preco, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.Preco)
                            @Html.ValidationMessageFor(m => m.Preco, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.HiddenFor(x => x.Desenho)
                    @Html.HiddenFor(x => x.Variante)
                    @Html.HiddenFor(x => x.Artigo)
                    @Html.HiddenFor(x => x.Tecnologia)
                    @Html.HiddenFor(x => x.UnidadeMedida, new { id = "hidUM"})
                    @Html.HiddenFor(x => x.ValorPadrao, new { id = "hidValPadrao" })
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Incluir" class="btn btn-default" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.ActionLink("Voltar", "#", "Pedido", null, new { @class = "btn btn-default left" })
                        </div>
                    </div>
            }
            </section>
        </div>
    </div>
</div>@section Scripts {
    <script>
        $(document).ready(function () {
            //API
            scriptWrapper = (function () {

                //API Attributes
                txtPecas_Blur = function()
                {
                    $("#txtQuantidade").val($("#txtPecas").val() * $("#hidValPadrao").val());
                }

                //API Methods

                // public API
                return {
                    txtPecas_Blur : txtPecas_Blur
                };
            })();

            //Init
            (function Init() {
                $("#lblQuantidade").val($("#hidUM").val());
                $("#txtPecas").blur(this.txtPecas_Blur);
            })();
        });
    </script>
}
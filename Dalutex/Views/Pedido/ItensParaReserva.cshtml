@model Dalutex.Models.ItensParaReservaViewModel

@using Dalutex.Models;
@using Dalutex.Models.DataModels;

@{
    ViewBag.Title = "ITENS PARA RESERVA";
}

<div class="panel panel-default"><h3>@ViewBag.Title</h3></div>

<div class="container-fluid">
    <div class="row-fluid" id="pesqDesenho">
        @using (Html.BeginForm("ItensParaReserva", "Pedido", null, FormMethod.Post, new { role = "search" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div>
                    @Html.TextBoxFor(x => x.FiltroCodStudio, new { @class = "form-control", placeholder = "Começa com.." })
                    @Html.TextBoxFor(x => x.FiltroCodDal, new { @class = "form-control", placeholder = "Contém.." })
                    @Html.TextBoxFor(x => x.FiltroDesenho, new { @class = "form-control", placeholder = "Começa com.." })
                    <button type="submit" class="btn btn-default btn-group-sm"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Pesquisar</button>
                </div>

                <input type="hidden" name="Pagina" value="@Model.Pagina" />
            </div>
        }
    </div>

    <div class="row">
        @if (Model.Galeria != null)
        {
            foreach (ItemReserva item in Model.Galeria)
            {
                <div class="col-sm-4 col-md-2">

                    @Html.Partial(
                        "_Thumb",
                        new Dalutex.Models.ThumbViewModel()
                        {
                            Tipo = Enums.ThumbType.Reserva,
                            Desenho = item.Desenho,
                            Variante = null,
                            UrlImagens = Model.UrlImagens,
                            Reduzido = 0,
                            Cor = null,
                            RGB = null,
                            IDColecao = 0,
                            NMColecao = null,
                            Pagina = Model.Pagina,
                            CodStudio = item.CodStudio,
                            CodDal = item.CodDal
                        })

                </div>
            }
        }
    </div>
    <div class="row">
        <nav>
            <ul class="pager">
                @if (Model.Galeria != null)
                {
                    if (Model.Pagina > 1)
                    {
                        <li class="previous"><a href="@Url.Action("ItensParaReserva", "Pedido", new { pagina = Model.Pagina - 1 })"><span aria-hidden="true">&larr;</span>P&aacute;gina Anterior</a></li>
                    }
                    <li class="next"><a href="@Url.Action("ItensParaReserva", "Pedido", new { pagina = Model.Pagina + 1 })">Pr&oacute;xima P&aacute;gina <span aria-hidden="true">&rarr;</span></a></li>
                }
            </ul>
        </nav>
    </div>
    <hr>
    <a class="btn btn-default right" href="javascript:history.back()">VOLTAR</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/equalheight")
    <script>
        $(document).ready(function () {
            //API
            scriptWrapper = (function () {

                //API Attributes

                //API Methods
                
                // public API
                return {

                };
            })();

            //Init
            (function Init() {
                $('.equal-height').equalHeight();
            })();
        });
    </script>
}

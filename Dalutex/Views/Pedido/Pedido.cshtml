@model Dalutex.Models.PedidoViewModel

@using Dalutex.Models;
@using Dalutex.Models.DataModels;

@{
    ViewBag.Title = "Pedido";
}

<h2>Desenhos</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            Categorias
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            Sub-categoria1
        </div>
        <div class="col-sm-4">
            Sub-categoria2
        </div>
        <div class="col-sm-4">
            Sub-categoria3
        </div>
    </div>
    <div class="row">
        <div class="row">
                @foreach(ItensEstoque item in Model.Galeria)
                {
                    <div class="col-sm-4 col-md-2">
                        <div class="thumbnail">
                            <img src="@Url.Content(Model.UrlImagens + item.Codigo.Substring(16, 4) + "_" + item.Codigo.Substring(20, 2) + ".jpg")">
                        </div>
                        <div class="caption">
                            <h3>@item.Codigo_Reduzido</h3>
                            <p>@item.Codigo.Substring(16, 4)</p>
                            <p>@item.Codigo.Substring(20, 2)</p>
                        </div>
                    </div>
                }
        </div>
    </div>
</div>
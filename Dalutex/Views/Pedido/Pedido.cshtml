@model Dalutex.Models.PedidoViewModel

@using Dalutex.Models;
@using Dalutex.Models.DataModels;

@{
    ViewBag.Title = "Pedido";
}
<div class="container-fluid">
    <div class="row">
        <div class="col btn-group btn-group-justified" role="group" aria-label="...">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default">COLEÇÃO</button>
            </div>            
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default">EXCLUSIVOS</button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default">PRONTA ENTREGA</button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default">RECOLORAÇÃO/ACERVO</button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default">OUTROS</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul>
                <li>Atual</li>
                <li>Pocket</li>
                <li>Outros</li>
            </ul>
        </div>
    </div>
    <div class="row">
        @foreach (ItensEstoque item in Model.Galeria)
        {
            <div class="col-sm-4 col-md-2">
                <div class="thumbnail" style="max-width: 200px; max-height: 100px">
                    <a href="@Url.Content(@"Ampliacao?&imagem=" + Model.UrlImagens + item.Codigo.Substring(16, 4) + "_" + item.Codigo.Substring(20, 2) + ".jpg")">
                        <img src="@Url.Content(Model.UrlImagens + item.Codigo.Substring(16, 4) + "_" + item.Codigo.Substring(20, 2) + ".jpg")" class="img-thumbnail equal-height" />
                    </a>
                    <div class="caption">
                        <h5>@item.Codigo.Substring(16, 4)&nbsp;@item.Codigo.Substring(20, 2)<small>&nbsp;(@item.Codigo_Reduzido)</small></h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/equalheight")
    <script>
        $(document).ready(function () {
            //API
            scriptWrapper = (function () {

                //API Attributes

                //API Methods

                // public API
                return {
                };
            })();

            //Init
            (function Init() {
                $('.equal-height').equalHeight();
            })();
        });
    </script>
}